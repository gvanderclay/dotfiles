source ~/.vimrc

Plug 'tpope/vim-commentary'

nnoremap <SPACE> <Nop>
let mapleader = " "

set clipboard^=ideaput

"" Plugin Settings
"" ========================================================
set highlightedyank
set sneak
set surround

"" Quickscope settings (quickscope must be defined after sneak)
"" set quickscope
"" let g:qs_highlight_on_keys = ['f', 'F', 't', 'T']


"" Commentary Settings
set commentary
map <leader>c <action>(CommentByLineComment)
let g:WhichKeyDesc_comment = "<Space>c Comment By Line"

"" nerdtree settings
set nerdtree
nmap <leader>ft :NERDTreeToggle<CR>
let g:WhichKeyDesc_ft = "<Space>ft Toggle File Tree"
nmap <leader>fx :NERDTreeFocus<CR>
let g:WhichKeyDesc_fx = "<Space>fx Focus File Tree"

"" Easymotion settings
set easymotion
let g:WhichKeyDesc_easymotion = "<leader><leader> EasyMotion"
let g:EasyMotion_do_mapping = 0

"" EasyMotion key mappings (use 'map' not 'noremap' for EasyMotion)
map <leader><leader>f <Plug>(easymotion-f)
let g:WhichKeyDesc_easymotion_f = "<leader><leader>f EasyMotion Find Forward"
map <leader><leader>F <Plug>(easymotion-F)
let g:WhichKeyDesc_easymotion_F = "<leader><leader>F EasyMotion Find Backward"
map <leader><leader>w <Plug>(easymotion-w)
let g:WhichKeyDesc_easymotion_w = "<leader><leader>w EasyMotion Word Forward"
map <leader><leader>b <Plug>(easymotion-b)
let g:WhichKeyDesc_easymotion_b = "<leader><leader>b EasyMotion Word Backward"
map <leader><leader>s <Plug>(easymotion-s)
let g:WhichKeyDesc_easymotion_s = "<leader><leader>s EasyMotion Search"

"" Which-key settings
set notimeout
set timeoutlen=5000
set which-key
let g:WhichKey_FontSize = 20
let g:WhichKey_CommandColor = "#41ead4"
let g:WhichKey_PrefixColor = "#f335b2"
let g:WhichKey_SortOrder = "by_key_prefix_first"
let g:WhichKey_SortCaseSensitive = "false"

"" Window splits
let g:WhichKeyDesc_windows        = "<Space>w  Windows"
map <leader>wv <Action>(SplitVertically)
let g:WhichKeyDesc_windows_split_vertical = "<Space>wv Split Vertically"
map <leader>wh <Action>(SplitHorizontally)
let g:WhichKeyDesc_windows_split_horizontal = "<Space>wh Split Horizontally"
map <leader>wu <Action>(Unsplit)
let g:WhichKeyDesc_windows_unsplit = "<Space>wu Unsplit"
map <leader>wm <Action>(MoveEditorToOppositeTabGroup)
let g:WhichKeyDesc_windows_move = "<Space>wm Move Editor To Opposite Group"

"" Pane navigation
nnoremap <A-h> <C-w>h
nnoremap <A-l> <C-w>l
nnoremap <A-k> <C-w>k
nnoremap <A-j> <C-w>j

"" Pane navigation
nnoremap <A-n> :tabnext<CR>
nnoremap <A-p> :tabprev<CR>

"" Multiple cursors
set multiple-cursors
" Remap multiple-cursors shortcuts to match terryma/vim-multiple-cursors
nmap <C-n> <Plug>NextWholeOccurrence
xmap <C-n> <Plug>NextWholeOccurrence
nmap g<C-n> <Plug>NextOccurrence
xmap g<C-n> <Plug>NextOccurrence
xmap <C-x> <Plug>SkipOccurrence
xmap <C-p> <Plug>RemoveOccurrence

" Note that the default <A-n> and g<A-n> shortcuts don't work on Mac due to dead keys.
" <A-n> is used to enter accented text e.g. Ã±
" Feel free to pick your own mappings that are not affected. I like to use <leader>
nmap <leader><C-n> <Plug>AllWholeOccurrences
xmap <leader><C-n> <Plug>AllWholeOccurrences
nmap <leader>g<C-n> <Plug>AllOccurrences
xmap <leader>g<C-n> <Plug>AllOccurrences


"" Display options
let g:WhichKeyDesc_display = "<Space>d  Display"
map <leader>dd <action>(ToggleDistractionFreeMode)
let g:WhichKeyDesc_dd = "<Space>dd Toggle Distraction Free Mode"
map <leader>dz <action>(ToggleZenMode)
let g:WhichKeyDesc_dz = "<Space>dz Toggle Zen Mode"
map <leader>df <action>(ToggleFullScreen)
let g:WhichKeyDesc_df = "<Space>df Toggle Full Screen"


"" File navigation
let g:WhichKeyDesc_files = "<Space>f  Files"
map <leader>ff <action>(GotoFile)
let g:WhichKeyDesc_ff = "<Space>ff Go to File"
map <leader>fr <action>(RecentFiles)
let g:WhichKeyDesc_fr = "<Space>fr Recent Files"
map <leader>fc <action>(FindInPath)
let g:WhichKeyDesc_fc = "<Space>fc Find in Path"
" Rename current file
map <leader>rf <action>(RenameFile)
let g:WhichKeyDesc_rf = "<Space>rf Rename File"
map <leader>fl <action>(RecentLocations)
let g:WhichKeyDesc_fl = "<Space>fl Recent Locations"
map <leader>rd <Action>(CopyElement)
let g:WhichKeyDesc_rd = "<Space>rd Duplicate File"

"" Actions
let g:WhichKeyDesc_actions = "<Space>a  Actions"
map <leader>am <action>(ShowIntentionActions)
let g:WhichKeyDesc_am = "<Space>am Show Intention Actions"
map <leader>as <action>(GotoAction)
let g:WhichKeyDesc_as = "<Space>as Find Action (Search Actions Only)"
map <leader>ar <action>(ReformatCode)
let g:WhichKeyDesc_ar = "<Space>ar Reformat Code"
map <leader>ao <action>(OptimizeImports)
let g:WhichKeyDesc_ao = "<Space>ao Optimize Imports"

"" Close active tab
map <leader>q <action>(CloseContent)
let g:WhichKeyDesc_q = "<Space>q Close Active Tab"

"" Refactoring
let g:WhichKeyDesc_refactor = "<Space>r  Refactor"
map <leader>rn <Action>(RenameElement)
let g:WhichKeyDesc_rn = "<Space>rn Rename Symbol"
map <leader>rr <Action>(Refactorings.QuickListPopupAction)
let g:WhichKeyDesc_rr = "<Space>rr Refactorings Quick List"

"" Go to code
let g:WhichKeyDesc_goto = "<Space>g  Go To"
nmap <leader>gd <Action>(GotoDeclaration)
let g:WhichKeyDesc_gd = "<Space>gd Go to Declaration"
nmap <leader>gy <Action>(GotoTypeDeclaration)
let g:WhichKeyDesc_gy = "<Space>gy Go to Type Declaration"
nmap <leader>gi <Action>(GotoImplementation)
let g:WhichKeyDesc_gi = "<Space>gi Go to Implementation"
nmap <leader>gu <Action>(ShowUsages)
let g:WhichKeyDesc_gu = "<Space>gu Show Usages"
nmap <leader>gt <Action>(GotoTest)
let g:WhichKeyDesc_gt = "<Space>gt Go to Test"

"" Git windows
let g:WhichKeyDesc_git = "<Space>G  Git & VCS"
map <leader>Gc <Action>(CheckinProject)
let g:WhichKeyDesc_gc = "<Space>Gc Commit / Checkin Project"
map <leader>Gs <Action>(ActivateVersionControlToolWindow)
let g:WhichKeyDesc_gs = "<Space>Gs Version Control Tool Window"
map <leader>Gb <Action>(Git.Branches)
let g:WhichKeyDesc_gb_git = "<Space>Gb Git Branches"

"" Terminal management
let g:WhichKeyDesc_terminal = "<Space>t  Terminal"

map <leader>tt <Action>(ActivateTerminalToolWindow)
let g:WhichKeyDesc_tt = "<Space>tt Toggle Terminal Tool Window"

"" IDE Operations
let g:WhichKeyDesc_ide = "<Space>i  IDE Operations"

"" Build & Run
let g:WhichKeyDesc_ide_build = "<Space>ib  Build & Run"
map <leader>ibb <Action>(AssembleRunConfiguration)
let g:WhichKeyDesc_ibb = "<Space>ibb Build Project"
map <leader>ibr <Action>(Run)
let g:WhichKeyDesc_ibr = "<Space>ibr Run"
map <leader>ibd <Action>(Debug)
let g:WhichKeyDesc_ibd = "<Space>ibd Debug"
map <leader>ibs <Action>(Android.SyncProject)
let g:WhichKeyDesc_ibs = "<Space>ibs Gradle Sync"
map <leader>iba <Action>(Android.GenerateSignedApk)
let g:WhichKeyDesc_iba = "<Space>iba Assemble APK"
map <leader>ibt <Action>(CompileProject)
let g:WhichKeyDesc_ibt = "<Space>ibt Build Tests"

"" Android Tools
map <leader>il <Action>(ActivateLogcatToolWindow)
let g:WhichKeyDesc_il = "<Space>il Logcat"

"" Testing
let g:WhichKeyDesc_ide_testing = "<Space>it  Testing"
map <leader>itt <Action>(RunClass)
let g:WhichKeyDesc_itt = "<Space>itt Run Tests in File"
map <leader>itd <Action>(DebugClass)
let g:WhichKeyDesc_itd = "<Space>itd Debug Test"

"" Project Management
let g:WhichKeyDesc_ide_project = "<Space>ip  Project"
map <leader>ipp <Action>(ShowProjectStructureSettings)
let g:WhichKeyDesc_ipp = "<Space>ipp Project Structure"

"" Debugging
let g:WhichKeyDesc_ide_debug = "<Space>id  Debugging"
map <leader>idb <Action>(ToggleLineBreakpoint)
let g:WhichKeyDesc_idb = "<Space>idb Toggle Breakpoint"
map <leader>idr <Action>(Resume)
let g:WhichKeyDesc_idr = "<Space>idr Resume"
map <leader>ids <Action>(StepOver)
let g:WhichKeyDesc_ids = "<Space>ids Step Over"
map <leader>idi <Action>(StepInto)
let g:WhichKeyDesc_idi = "<Space>idi Step Into"
map <leader>ido <Action>(StepOut)
let g:WhichKeyDesc_ido = "<Space>ido Step Out"
map <leader>idv <Action>(ViewBreakpoints)
let g:WhichKeyDesc_idv = "<Space>idv View Breakpoints"
